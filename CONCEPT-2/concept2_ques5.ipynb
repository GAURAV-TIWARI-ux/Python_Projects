    "# find the sum of all even numbers from 2 to n using if condition inside the for loop.\n",
    "def add_even(n):\n",
    "    add=0\n",
    "    for i in range(2,n+1):\n",
    "        if i%2==0:\n",
    "            add=add+i\n",
    "    return add\n",
    "print(add_even(50))\n",
    "print(add_even(15))\n",
    "print(add_even(28))\n",
    "print(add_even(93))"
   ]
  }
